#/bin/sh

ConfigFolder=${XDG_CONFIG_HOME:-"$HOME/.config"}/bookmenu

sudo cp -i ./documentation/bookmenu.1 /usr/share/man/man1
sudo cp -i./bookmenu /usr/bin
sudo chmod +x /usr/bin/bookmenu

sudo mkdir /usr/share/bookmenu
sudo cp -i ./config/bookmarks /usr/share/bookmenu
sudo cp -i ./config/config /usr/share/bookmenu

mkdir "$ConfigFolder"
cp -i ./config/bookmarks $ConfigFolder/config
cp -i ./config/bookmarks $ConfigFolder/bookmarks
